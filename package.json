{
  "name": "vanta-vuln-stats-electron",
  "version": "1.0.0",
  "description": "Electron application for synchronizing and visualizing Vanta vulnerability data.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "test": "node --test test/**/*.test.js",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "echo 'No linting configured'",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "package:mac": "electron-builder --mac dir"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/renderer/**/*.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "electron": "^35.7.5",
    "electron-builder": "^24.13.3",
    "jest": "^30.2.0"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "better-sqlite3": "^12.4.1",
    "dayjs": "^1.11.10",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.vanta.vulnstats",
    "productName": "Vanta Vulnerability Stats",
    "asar": true,
    "files": [
      "**/*",
      "!dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dir"
      ]
    },
    "directories": {
      "output": "dist"
    },
    "extraMetadata": {
      "main": "src/main/main.js"
    }
  }
}
